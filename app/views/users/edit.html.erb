<% provide(:title, "Редактирование пользователя") %>

<div class = "container" style = "margin-top:20px;">
  <div class="row profile">
    <div class="col-md-3 col-sm-12 col-xs-12" style = "padding:0px;">
      <div class="profile-sidebar">
          <div class="profile-usermenu">
            <ul class="nav">
              <li>
                <%= link_to "Профиль", current_user %>
              </li>
              <li>
                <a href="#">
                <i class="fa fa-list"></i>
                Мои заказы </a>
              </li>
              <li class = "active">
                <a href= <%= edit_user_path(current_user) %>>
                <i class="fa fa-cog"></i>
                Настройки аккаунта </a>
              </li>
              <li>
                <%= link_to "Выход" , logout_path, method: "delete" %>
              </li>
            </ul>
          </div>
        </div>
    </div>
    <div class="col-md-9 col-sm-12 col-xs-12" style="padding:0px;">
      <div class="profile-content">
         <div class="panel panel-default">
            <div class="panel-heading">
              <%= render 'shared/error_messages' %>
              <div class = "row" style = "padding: 0 20px 0 10px">
                Редактирование информации
                  <a href="javascript:showhide('profile-inf-show', 'profile-inf-change')">
                    <i class="fa fa-pencil pull-right"></i>
                  </a>
              </div>
            </div>

            <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages' %>
            
            <%= f.label :last_name, "Фамилия"%>
            <%= f.text_field :last_name, class: 'form-control' %>
            
            <%= f.label :name, "Имя" %>
            <%= f.text_field :name, class: 'form-control' %>
            
            <%= f.label :middle_name, "Отчество"%>
            <%= f.text_field :middle_name, class: 'form-control' %>
            
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
            
            <%= f.label :phone, "Телефон"%>
            <%= f.text_field :phone, class: 'form-control' %>
            
            <%= f.label :city, "Город"%>
            <%= f.text_field :city, class: 'form-control' %>
            
            <%= f.label :address, "Адрес"%>
            <%= f.text_field :address, class: 'form-control' %>
            
            <%= f.label :password, "Пароль"%>
            <%= f.password_field :password, class: 'form-control' %>
            
            <%= f.label :password_confirmation, "Подтверждение пароля"%>
            <%= f.password_field :password_confirmation, class: 'form-control' %>

            <%= f.submit "Сохранить изменения", class: "btn btn-primary" %>
            <% end %>       
        </div>
      </div>
    </div>
  </div> 
</div>      
