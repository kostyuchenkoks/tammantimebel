<% provide(:title, "Войти") %>
<login>
        <div class = "container" style = "padding:30px;">
            <div class = "row">
                <div class = "col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                    <p class = "text-g16 center-content">Быстрый вход через соцсети</p>
                    <div class = "row center-content">
                        <button type = "button" class = "empty">
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-square color-vk fa-stack-2x"></i>
                                <i class="fa fa-vk fa-stack-1x fa-inverse"></i>
                            </span>
                        </button>
                        <button type = "button" class = "empty">
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-square color-fb fa-stack-2x"></i>
                                <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
                            </span>
                        </button>
                        <button type = "button" class = "empty">
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-square color-ok fa-stack-2x"></i>
                                <i class="fa fa-odnoklassniki fa-stack-1x fa-inverse"></i>
                            </span>
                        </button>
                        <button type = "button" class = "empty">
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-square color-gp fa-stack-2x"></i>
                                <i class="fa fa-google-plus fa-stack-1x fa-inverse"></i>
                            </span>
                        </button>
                    </div>
                    <br>
                     <p class = "text-g16 center-content">или Email</p>
                    <br>
                    <%= form_for(:session, url: login_path) do |f| %>
   	  
                      <%= f.label :email %>
                      <%= f.email_field :email, class: 'form-control' %>
                        <br>
                      <%= f.label :password %>
                      <%= link_to "(забыли пароль)", new_password_reset_path %>
                      <%= f.password_field :password, class: 'form-control' %>

                      <%= f.label :remember_me, class: "checkbox inline", style:"padding-left:20px;"  do %>
                        <%= f.check_box :remember_me %>
                        <span>Remember me on this computer</span>
                      <% end %>
                        <br>
                      <%= f.submit "Войти", class: "btn btn-danger", style:"width:100%" %>
                    <% end %>
                    <br>
                    <p>Новый пользователь? <%= link_to "Зарегистрироваться!", signup_path %></p>
                    <br>
                </div>
            </div>
        </div>
    </login>