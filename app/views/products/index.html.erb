<% provide(:title, 'Товары') %>

<all_products>
    <div class = "container" style = "padding:30px;">
        <div class="panel panel-default">
              <div class="panel-heading">
                  <div class = "row" style = "padding: 0 20px 0 20px">
                    Товары
                    </div>
                </div>
            <div class="panel-body">
                <table class="table-bordered table-striped table">
                    <% @products.each do |product| %>
                      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
                        <td>
                          <%= image_tag(product.image_url, class: 'list_image img-responsive', style:"max-height:70px;") %>
                        </td>
                        <td class="list_description">
                          <dl>
                            <dt><%= product.title %></dt>
                            <dd><%= truncate(strip_tags(product.description), length: 80) %></dd>
                          </dl>
                        </td>
                        <td class="list_actions">
                          <%= link_to 'Показать', product %><br/>
                          <%= link_to 'Редактировать', edit_product_path(product) %><br/>
                          <%= link_to 'Удалить', product, method: :delete,
                                      data: { confirm: 'Вы уверены?' } %>
                        </td>
                      </tr>
                    <% end %>
                </table>
                <br>

                    <%= link_to 'Новый товар', new_product_path %>
            </div>
        </div>
    </div>
</all_products>